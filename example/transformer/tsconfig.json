{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist", 
        "declaration": true, 
        "alwaysStrict": true, 
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@schemas/*": [
                "src/schemas/*"
            ]
        },
    },
    "include": [
        "./src/**/*"
    ]
}
