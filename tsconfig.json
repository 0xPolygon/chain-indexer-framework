{
    "compilerOptions": {
        "module": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "nodenext",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "esnext",
        "sourceMap": true,
        "outDir": "dist/",
        "declaration": true,
        "strict": true,
        "alwaysStrict": true,
        "baseUrl": "./",
        "paths": {
            "@internal/*": [
                "internal/*"
            ]
        },
    },
    "include": [
        "./internal/**/*",
        "./public/**/*"
    ]
}
